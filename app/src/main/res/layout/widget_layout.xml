<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/wedget_shape"
    app:cardPreventCornerOverlap="true"
    android:elevation="4dp"
    >
<GridLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="2"
    android:padding="16dp"
    android:id="@+id/widget"
    >
    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_rowSpan="2"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical|start"
            android:id="@+id/widget_tv_quote"
            android:text="kjhnddfghidufhvi"
            android:textSize="@dimen/text_size_title_material" android:layout_margin="8dp"
            style="@style/quote_style"
            android:singleLine="false"
            android:maxLines="5"
            android:layout_weight="1"
            />
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/widget_tv_author"
            android:text="@string/author_hint"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/cardview_light_background"
            android:textSize="16sp"
            android:layout_margin="8dp"
            />
    </LinearLayout>
    <ImageButton
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:id="@+id/widget_btn_open_browser"
        android:background="@drawable/avatar"
        android:src="@drawable/open_in_browser"
        android:layout_margin="8dp"
        android:layout_gravity="top|end"
        android:layout_rowWeight="1"

        />

    <ImageButton android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@drawable/avatar"
        android:src="@drawable/ic_next"
        android:id="@+id/widget_btn_next"
        android:layout_margin="8dp"
        android:layout_gravity="end"/>
    </GridLayout>
</FrameLayout>